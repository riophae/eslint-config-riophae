{
  "name": "eslint-config-riophae",
  "version": "0.8.0",
  "description": "The customized ESLint shareable configs for the development of my open-source projects.",
  "author": {
    "name": "Riophae Lee",
    "email": "riophaelee@gmail.com",
    "url": "https://github.com/riophae"
  },
  "license": "MIT",
  "repository": "riophae/eslint-config-riophae",
  "main": "index.js",
  "files": [
    "index.js",
    "legacy.js",
    "vue.js",
    "rules"
  ],
  "scripts": {
    "lint": "eslint .",
    "find-rules": "eslint-find-rules --unused --deprecated ./index.js && eslint-find-rules --unused --deprecated ./vue.js # legacy preset is intended to be ignored",
    "tests-only": "ava",
    "pretest": "npm run lint",
    "test": "npm run tests-only && npm run find-rules"
  },
  "keywords": [
    "eslintconfig",
    "riophae",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint",
    "simple"
  ],
  "devDependencies": {
    "ava": "*",
    "eslint": "^6.3.0",
    "eslint-find-rules": "^3.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-vue": "^5.2.3",
    "is-plain-obj": "^2.0.0",
    "temp-write": "^4.0.0"
  },
  "peerDependencies": {
    "eslint": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-vue": "^5.2.3"
  },
  "dependencies": {
    "eslint-restricted-globals": "^0.2.0"
  },
  "engines": {
    "node": "^8.10.0 || ^10.13.0 || >=11.10.1"
  }
}
