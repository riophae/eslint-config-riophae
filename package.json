{
  "name": "eslint-config-riophae",
  "version": "0.0.6",
  "description": "The customized ESLint shareable configs for the development of my open-source projects.",
  "author": {
    "name": "Riophae Lee",
    "email": "riophaelee@gmail.com",
    "url": "https://github.com/riophae"
  },
  "license": "MIT",
  "repository": "riophae/eslint-config-riophae",
  "main": "index.js",
  "files": [
    "index.js",
    "legacy.js",
    "vue.js",
    "rules"
  ],
  "scripts": {
    "lint": "eslint .",
    "find-rules": "eslint-find-rules --unused --deprecated ./index.js && eslint-find-rules --unused --deprecated ./vue.js # legacy preset is intended to be ignored",
    "tests-only": "ava",
    "pretest": "npm run lint",
    "test": "npm run tests-only && npm run find-rules",
    "precommit": "remove-lockfiles"
  },
  "keywords": [
    "eslintconfig",
    "riophae",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint",
    "simple"
  ],
  "devDependencies": {
    "ava": "*",
    "eslint": "^4.18.2",
    "eslint-find-rules": "^3.2.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-vue": "^4.3.0",
    "is-plain-obj": "^1.0.0",
    "pre-commit": "^1.2.2",
    "remove-lockfiles": "^2.1.2",
    "temp-write": "^3.1.0"
  },
  "peerDependencies": {
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-vue": "^4.3.0"
  },
  "dependencies": {
    "eslint-restricted-globals": "^0.1.1"
  },
  "engines": {
    "node": ">= 4"
  }
}
